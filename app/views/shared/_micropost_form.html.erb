<h1>Blood Request Form</h1>
<%= form_for(@micropost)  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col-md-6 col-md-offset-3">

  	<%= f.label :Category %>
       <%= f.select :origin, ['Select', 'A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-'], class: 'form-control'%>

      <%= f.label :Quantity %>
      <%= f.text_field :destination, class: 'form-control'%>
     
      <%= f.label :Area %>
       <%= f.text_field :budget, class: 'form-control'%>

      <%= f.label :Comments  %>
    <%= f.text_area :content, placeholder: "comments..." %>
  </div>
  <%= f.submit "Request", class: "btn btn-primary" %>
  

<% end %>